@using Entities.Domain
@using Nois.Web.Framework.Kendoui;
@model List<Web.Models.SupplyChain.SupplyChainModel>
@{

    Layout = null;
}


<div class="row">
    <div class="col-md-12">


        <div class="box border orange scroll-x">

            <table id="supplychaingrid" class="table">
                <thead>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        @foreach (var item in Model)
                        {
                            <th colspan="5">@item.SupplyChainHSE[0].CreatedDate</th>
                        }
                    </tr>
                    <tr>
                        <th>DMS</th>
                        <th>Measure-Making</th>
                        <th>Owner</th>
                        @foreach (var item in Model)
                        {
                            
                            <th>FR</th>
                            <th>Bottle</th>
                            <th>Sachet1</th>
                            <th>Sachet2</th>
                            <th>Pouch</th>
                          
                        }
                    </tr>
                </thead>

                <!-- Making -->
                <tbody>
                    <tr data-type="1" data-measurecode="@(1)" class="scdds-target">
                        <td rowspan="8" class="scdds-DMS">MPSA</td>
                        <td class="measurecode">@Model[0].SupplyChainMPSA[0].MeasureName </td>
                        <td class="owner "> </td>
                        @foreach (var item in Model)
                        {
                            
                            <td class="mpsafr line-edit line-cols" colspan="5">
                                <span>@item.SupplyChainMPSA[0].MPSAFR </span>

                            </td>

                        
                        }
                    </tr>
                    @for (int i = 1; i < 5; i++)
                    {
                        <tr data-type="1" data-measurecode="@(i + 1)">
                            <td class="measurecode">@Model[0].SupplyChainMPSA[i].MeasureName </td>
                            <td class="owner ">
                                <span>
                                    @foreach (var user in Model[0].SupplyChainMPSA[i].ListUsernameInSupplyChainMPSA)
                                    {
                                        <text> @user; </text>
                                    }
                                </span>



                            </td>
                            @foreach (var item in Model)
                            {
                               
                                <td class="fr line-cols">
                                    <span>@item.SupplyChainMPSA[i].FR </span>

                                </td>
                                <td class="bottle line-cols">
                                    <span>@item.SupplyChainMPSA[i].Bottle </span>

                                </td>
                                <td class="sachet1  line-cols">
                                    <span>@item.SupplyChainMPSA[i].Sachet1 </span>

                                </td>
                                <td class="sachet2  line-cols">
                                    <span>@item.SupplyChainMPSA[i].Sachet2 </span>

                                </td>
                                <td class="pouch  line-cols">
                                    <span>@item.SupplyChainMPSA[i].Pouch </span>

                                </td>

                             
                            }
                        </tr>
                    }

                    <!--End Making-->
                    <!-- Output message -->

                    <tr class="thead">
                        <td>Output Measure</td>
                        <td>Owner</td>
                        @foreach (var item in Model)
                        {
                          
                            <td>MPSA-FR</td>
                            <td colspan="3">MPSA-FE</td>
                            <td>Remarks</td>
                        }
                    </tr>
                    @for (int i = 5; i < 7; i++)
                    {
                        <tr data-measurecode="@(i + 1)">
                            <td class="measurecode"><span>@Model[0].SupplyChainMPSA[i].MeasureName</span> </td>
                            <td class="owner ">
                                <span>
                                    @foreach (var user in Model[0].SupplyChainMPSA[i].ListUsernameInSupplyChainMPSA)
                                    {
                                        <text> @user; </text>
                                    }
                                </span>


                            </td>
                            @foreach (var item in Model)
                            {
                               
                                <td class="mpsafr line-edit line-cols">
                                    <span>@item.SupplyChainMPSA[i].MPSAFR </span>

                                </td>
                                <td class="mpsafe line-edit line-cols" colspan="4">
                                    <span>@item.SupplyChainMPSA[i].MPSAFE </span>

                                </td>
                            
                            }

                        </tr>
                    }
                </tbody>
                <!--End output message-->
            </table>

        </div>

    </div>
</div>
